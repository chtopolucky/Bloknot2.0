<Window x:Class="Bloknot2._0.Task"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bloknot2._0"
        mc:Ignorable="d"
        Title="Поменять строки..." Height="170" Width="206">
    <Grid>
        <Button Content="Поменять" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="60" Click="Rearrange_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="91,106,0,0" VerticalAlignment="Top" Width="94" Click="Cancel_Click"/>
        <Label Content="Номер второй строки" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
        <Label Content="Номер одной строки" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Strok2" HorizontalAlignment="Left" Margin="10,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="Strok1" HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>

    </Grid>
</Window>
